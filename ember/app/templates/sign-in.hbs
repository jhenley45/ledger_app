<h2>Sign In</h2>

<div class='col-md-6'>
  {{#if errorMessage}}
    <div class="error-message">
      Login failed: {{errorMessage}}
    </div>
  {{/if}}
	<div class="form-group">
		Email Address {{input type="text" class="form-control" id="email" value=identification size="30"}}
	</div>
  <div class="form-group">
    Password {{input id='password' class='form-control' type='password' value=password}}
  </div>

  <button {{action "login"}}>Login</button>
</div>
