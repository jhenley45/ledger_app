<h3>{{title}}</h3>

{{#if payments.length}}
	<ul>
	{{#each payment in payments}}
		<li class="payment">
			{{payment.description}}
			<span>
				<button {{action "removePayment"}} class="standard-button">Remove payment</button>
			</span>
		</li>
	{{/each}}
	</ul>
{{else}}
	<div class="warning-block">
		There are currently no payments for this trip
	</div>
{{/if}}

{{!-- {{#link-to 'payments.new'}}
  Add a new payment
{{/link-to}} --}}
<button {{action "toggleNewPaymentForm"}} class="standard-button">{{newPaymentButtonText}}</button>

