<h2>Create Account</h2>

<div class='col-md-6'>
	<div class="form-group">
		Email Address {{input type="text" class="form-control" id="email" value=title size="30"}}
	</div>

  <div class="form-group">
    Password {{input type="text" class="form-control" id="password" value=title size="30"}}
  </div>

  <div class="form-group">
    Repeat Password {{input type="text" class="form-control" id="repeat-password" value=title size="30"}}
  </div>

	<button {{action "createUser"}}>Submit</button>

	{{#if formError}}
		<p class="error-message">Error: {{formError}}</p>
	{{/if}}

</div>
